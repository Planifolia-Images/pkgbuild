pkgname=plymouth-theme-vanilla
pkgver=1.0.2
pkgrel=1
pkgdesc="Plymouth theme for Vanilla-OS."
arch=('any')
url="https://github.com/Vanilla-OS/plymouth-theme-vanilla"
depends=('plymouth')
makedepends=('meson')
source=("git+${url}#tag=v${pkgver}")
sha256sums=('b5037e3b94753c7ca116fdf5ad5d9c651ccb05a9a18cc13e925d5797bafe0a97')

build() {
  cd "${srcdir}/${pkgname}"
  arch-meson build
  ninja -C build
}

package() {
  cd ${pkgname}
  DESTDIR="$pkgdir" ninja -C build install
}
